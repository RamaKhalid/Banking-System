import unittest
from bank.bank import Customer
class TestCustomer(unittest.TestCase):
    def setUp(self):
        self.customer = Customer('Rama', 'Khalid', 'Rama123', 20000, 5000)

    def test_creating_customer_object(self):
        self.assertEqual(self.customer.first_name, 'Rama')
        self.assertEqual(self.customer.last_name, 'Khalid')
        self.assertEqual(self.customer.password, 'Rama123')
        self.assertEqual(self.customer.balance_checking, 20000)
        self.assertEqual(self.customer.balance_savings, 5000)

    def test_customer_info(self):
        self.assertEqual(self.customer.info(), 'First Name: Rama \nLast Name: Khalid \nPassword: Rama123 \nBalance Checking: 20000 \nBalance_Savings: 5000')